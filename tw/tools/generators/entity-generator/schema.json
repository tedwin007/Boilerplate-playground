{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "entity-generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "grid": {
      "type": "string",
      "description": "Adds agGrid component with columns definition",
      "default": "",
      "x-prompt": "name the grid component (Should also match the json file name)"
    },
    "required": [
      "name"
    ]
  }
}
